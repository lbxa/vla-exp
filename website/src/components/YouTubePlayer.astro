---
export interface Props {
  videoId: string;
  caption?: string;
  width?: string;
  height?: string;
  class?: string;
  autoplay?: boolean;
  mute?: boolean;
}

const { 
  videoId, 
  caption, 
  width = "100%", 
  height = "315",
  class: className = "",
  autoplay = false,
  mute = false
} = Astro.props;

// YouTube embed parameters
const autoplayParam = autoplay ? '1' : '0';
const muteParam = mute ? '1' : '0';
const embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=${autoplayParam}&mute=${muteParam}&rel=0&modestbranding=1`;
---

<figure class={`mx-auto my-8 ${className}`}>
  <div class="rounded-lg border border-gray-200 bg-gray-50 p-4">
    <div class="relative aspect-video">
      <iframe 
        src={embedUrl}
        title="YouTube video player"
        width={width}
        height={height}
        class="size-full rounded shadow-sm"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
        loading="lazy"
      >
      </iframe>
    </div>
  </div>
  {caption && (
    <figcaption class="mt-3 text-center text-sm italic text-gray-600">
      {caption}
    </figcaption>
  )}
</figure>

<style>
  figure {
    margin-left: auto;
    margin-right: auto;
  }
  
  iframe {
    /* No hover effects */
  }
  
  /* Responsive video container */
  @media (max-width: 768px) {
    figure {
      margin-left: auto;
      margin-right: auto;
    }
    
    .bg-gray-50 {
      border-radius: 0;
      border-left: none;
      border-right: none;
    }
  }
  
  /* Ensure aspect ratio is maintained */
  .aspect-video {
    aspect-ratio: 16 / 9;
  }
</style>