---
export interface Props {
  id: string;
  title: string;
  class?: string;
}

const { id, title, class: className = "" } = Astro.props;
---

<section 
  id={id} 
  class={`mx-auto max-w-4xl px-lg py-12 ${className}`}
>
  <div class="prose prose-lg prose-gray max-w-none">
    <slot />
  </div>
</section>

<style>
  /* Custom prose styles for academic content */
  .prose {
    @apply text-gray-900;
  }
  
  .prose h1 {
    @apply text-4xl font-bold mb-8 text-gray-900 border-b border-gray-200 pb-4;
  }
  
  .prose h2 {
    @apply text-3xl font-semibold mb-6 mt-12 text-gray-900;
  }
  
  .prose h3 {
    @apply text-2xl font-semibold mb-4 mt-8 text-gray-900;
  }
  
  .prose h4 {
    @apply text-xl font-semibold mb-3 mt-6 text-gray-900;
  }
  
  .prose h5 {
    @apply text-lg font-semibold mb-2 mt-4 text-gray-900;
  }
  
  .prose h6 {
    @apply text-base font-semibold mb-2 mt-4 text-gray-900;
  }
  
  .prose p {
    @apply mb-4 leading-relaxed text-gray-700;
  }
  
  .prose ul, .prose ol {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply mb-2 text-gray-700;
  }
  
  .prose strong {
    @apply font-semibold text-gray-900;
  }
  
  .prose em {
    @apply italic text-gray-800;
  }
  
  .prose a {
    @apply text-blue-600 hover:text-blue-800 underline transition-colors;
  }
  
  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono text-gray-800;
  }
  
  .prose pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  .prose pre code {
    @apply bg-transparent p-0 text-gray-100;
  }
  
  .prose blockquote {
    @apply border-l-4 border-blue-200 pl-4 italic text-gray-600 mb-4;
  }
  
  .prose hr {
    @apply border-gray-300 my-8;
  }
  
  .prose table {
    @apply w-full border-collapse mb-4;
  }
  
  .prose th, .prose td {
    @apply border border-gray-300 px-4 py-2 text-left;
  }
  
  .prose th {
    @apply bg-gray-50 font-semibold;
  }
  
  /* Academic paper specific styles */
  .prose .math-display {
    @apply text-center my-6;
  }
  
  .prose .citation {
    @apply text-blue-600 text-sm;
  }
  
  .prose .author-info {
    @apply text-gray-600 mb-4;
  }
  
  .prose .affiliation {
    @apply text-sm text-gray-500 mb-6;
  }
  
  /* KaTeX styling */
  .prose .katex-display {
    @apply text-gray-900 my-6 text-center;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  
  .prose .katex {
    @apply text-gray-900;
  }
  
  .prose .katex-display .katex {
    display: inline-block;
    text-align: center;
  }
  
  /* Override any prose styles that might interfere */
  .prose .katex-display .katex .base {
    display: inline-block;
  }
</style>