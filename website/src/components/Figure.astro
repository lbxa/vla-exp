---
export interface Props {
  src: string;
  caption?: string;
  alt: string;
  width?: string;
  height?: string;
  class?: string;
}

const { 
  src, 
  caption, 
  alt, 
  width = "100%", 
  height = "auto",
  class: className = "" 
} = Astro.props;
---

<figure class={`mx-auto my-xl ${className}`}>
  <div class="flex items-center justify-center rounded border border-nerfies-gray-200 bg-nerfies-gray-50 p-md shadow-nerfies">
    <img 
      src={src} 
      alt={alt}
      width={width}
      height={height}
      class="mx-auto block h-auto max-w-full rounded"
      loading="lazy"
    />
  </div>
  {caption && (
    <figcaption class="mt-3 text-center text-sm italic text-nerfies-gray-600">
      {caption}
    </figcaption>
  )}
</figure>

<style>
  figure {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }
  
  img {
    display: block;
    margin: 0 auto;
  }
  
  /* Responsive image container */
  @media (max-width: 768px) {
    figure {
      /* Keep figure centered */
    }
    
    .bg-nerfies-gray-50 {
      border-radius: 0;
      border-left: none;
      border-right: none;
      padding: 0.5rem;
    }
    
    /* Ensure images never exceed viewport width */
    img {
      max-width: calc(100vw - 1rem);
      height: auto;
      object-fit: contain;
    }
  }

  /* Tablet adjustments */
  @media (max-width: 1024px) and (min-width: 769px) {
    figure {
      /* Keep figure centered */
    }
  }
</style>