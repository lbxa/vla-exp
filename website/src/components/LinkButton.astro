---
import { Icon } from 'astro-icon/components';

export interface Props {
  href: string;
  type: 'arxiv' | 'github' | 'huggingface' | 'website' | 'dataset';
  class?: string;
}

const { href, type, class: className = "" } = Astro.props;

const buttonStyles = {
  arxiv: "text-red-600 hover:text-red-700",
  github: "text-gray-800 hover:text-gray-900", 
  huggingface: "text-yellow-600 hover:text-yellow-700",
  website: "text-blue-600 hover:text-blue-700",
  dataset: "text-purple-600 hover:text-purple-700"
};

const iconNames = {
  arxiv: "arxiv",
  github: "mdi:github",
  huggingface: "hf",
  website: "mdi:web",
  dataset: "mdi:database"
};
---

<a 
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center gap-sm rounded-lg px-md py-sm font-medium transition-colors ${buttonStyles[type]} ${className}`}
>
  <slot />
  <Icon name={iconNames[type]} size={20} />
</a>