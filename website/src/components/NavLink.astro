---
export interface Props {
  href: string;
  mobile?: boolean;
  class?: string;
}

const { href, mobile = false, class: className = "" } = Astro.props;

const baseClasses = "hover:text-nerfies-primary transition-colors duration-200";
const desktopClasses = mobile ? "" : "";
const mobileClasses = mobile ? "block py-sm" : "";
const combinedClasses = `${baseClasses} ${mobile ? mobileClasses : desktopClasses} ${className}`;
---

<a href={href} class={combinedClasses}>
  <slot />
</a>